{
    "manifest_version": 3,
    "name": "Productivity Tracker",
    "description": "Track your productive vs non-productive time",
    "version": "1.0",
    "permissions": [
      "tabs",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }
  
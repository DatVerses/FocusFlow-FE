{
  "manifest_version": 3,
  "name": "Focus Reminder",
  "version": "1.0",
  "description": "Nhắc nhở khi truy cập website xao nhãng.",
  "permissions": ["tabs", "storage", "notifications"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon.png"
  },
  "host_permissions": [
  "<all_urls>"
]
}
